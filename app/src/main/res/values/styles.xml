<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textInputStyle">@style/AppTextField</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="MyTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textInputStyle">@style/AppTextField</item>
        <item name="android:editTextColor">#fff</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>


    <style name="HomeTheme" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#9FA8DA</item>
        <item name="errorTextColor">#FF7D7D</item>
        <item name="hintTextColor">@android:color/white</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="FirebaseUIStyle" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">#1976d2</item>
        <item name="colorPrimaryDark">#004ba0</item>
        <item name="colorAccent">#000000</item>
        <item name="colorOnBackground">#F06292</item>
    </style>

    <style name="CustomFloatingAction" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="borderWidth">0dp</item>
        <item name="android:padding">20dp</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="android:src">@drawable/ic_add_white</item>
    </style>


</resources>
